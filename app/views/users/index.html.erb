<p id="notice"></p>
<div class="container px-5 px-sm-0">
<div class="row">
  <div class="col-md-3">
    <%= render 'users/list', user: current_user, book: @book %>
  </div>
<div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
     <tr>
     <td><%= attachment_image_tag user, :profile_image, :size => "50x50" , fallback: "no_image.jpg" %></td>
     <td><%= user.name %></td>
     <% if current_user.following?(user) %>
     <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
     <% else %>
     <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
     <% end %>
     <td><%= link_to "Show", user_path(user.id) %></td>
     </tr>
    <%end%>
  </tbody>
</table>
</div>
</div>
</div>
